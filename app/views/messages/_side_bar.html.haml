.left-contents
  .header
    .name-box
      = current_user.name
    .menu
      .menu__new
        = link_to new_group_path, class:"new_group" do
          = fa_icon 'pencil-square-o', class: 'icon'
      .menu__edit
        = link_to edit_user_path(current_user), class:"user-edit" do
          = fa_icon 'cog', class: 'icon'    
  .bottom
    .group
    - current_user.groups.each do |group|
      = link_to group_messages_path(group) do
        .group__name
          = group.name
        .group__message
          = group.show_last_message